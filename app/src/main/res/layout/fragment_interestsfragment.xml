<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="401dp"
    android:layout_height="533dp"
    tools:context=".interestsfragment"
    android:background="@color/black">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
       android:background="@drawable/scrollview"
        android:isScrollContainer="true">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="277dp"
            android:layout_height="55dp"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Tech :"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.129"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/EntChipGroup2">

        </TextView>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="219dp"
            android:layout_height="49dp"
            android:layout_marginTop="12dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Entertainmnet"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.087"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SportsChipGroup">

        </TextView>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="219dp"
            android:layout_height="49dp"
            android:layout_marginTop="40dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Sports :"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.087"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/SportsChipGroup"
            android:layout_width="396dp"
            android:layout_height="155dp"
            android:layout_marginTop="8dp"
            android:outlineAmbientShadowColor="@color/teal_700"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.727"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintVertical_bias="0.025">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip6"
                style="@style/CustomChipstyle"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_marginLeft="20dp"
                android:text="Football"
                android:textAlignment="center"
                android:textSize="15dp"
                app:chipIcon="@drawable/logo_1" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip7"
                style="@style/CustomChipstyle"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_marginLeft="10dp"
                android:text="Badminton"
                android:textAlignment="center" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip8"
                style="@style/CustomChipstyle"
                android:layout_width="120dp"
                android:layout_height="67dp"
                android:text="BasketBall"
                android:textAlignment="center"
               />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip9"
                style="@style/CustomChipstyle"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_marginLeft="40dp"
                android:text="Volley Ball"
                android:textAlignment="center"
                app:checkedIconEnabled="true"
                app:chipCornerRadius="50dp"
                app:chipEndPadding="20dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip4"
                style="@style/CustomChipstyle"
                android:layout_width="141dp"
                android:layout_height="67dp"
                android:layout_marginLeft="10dp"
                android:text="Cricket"
                android:textAlignment="center" />

            <com.google.android.material.chip.ChipGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </com.google.android.material.chip.ChipGroup>

        </com.google.android.material.chip.ChipGroup>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/EntChipGroup2"
            android:layout_width="368dp"
            android:layout_height="171dp"
            android:layout_marginTop="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.484"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip10"
                style="@style/CustomChipstyle"
                android:layout_width="90dp"
                android:layout_height="67dp"
                android:layout_marginTop="12dp"
                android:text="Music"
                android:textAlignment="center"
                app:checkedIconEnabled="true"
                app:chipCornerRadius="50dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip11"
                style="@style/CustomChipstyle"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:text="Movies"
                android:textAlignment="center"
                app:checkedIconEnabled="true"
                app:chipCornerRadius="50dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip12"
                style="@style/CustomChipstyle"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_marginLeft="20dp"
                android:text="Tv Shows"
                android:textAlignment="center"
                app:checkedIconEnabled="true"
                app:chipCornerRadius="50dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip13"
                style="@style/CustomChipstyle"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_marginLeft="20dp"
                android:text="Anime and Manga"
                android:textAlignment="center"
                app:checkedIconEnabled="true"
                app:chipCornerRadius="50dp"
                 />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip14"
                style="@style/CustomChipstyle"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="12dp"
                android:text="Gaming"
                android:textAlignment="center"
                app:checkedIconEnabled="true"
                app:chipCornerRadius="50dp"
                 />
        </com.google.android.material.chip.ChipGroup>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/TechChipGroup"
            android:layout_width="409dp"
            android:layout_height="187dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip5"
                style="@style/CustomChipstyle"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_marginLeft="20dp"
                android:text="Start Up"
                android:textAlignment="center"
                app:checkedIconEnabled="true"
                app:chipCornerRadius="50dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip15"
                style="@style/CustomChipstyle"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_marginLeft="20dp"
                android:text="AR / VR"
                android:textAlignment="center"
                app:checkedIconEnabled="true"
                app:chipCornerRadius="50dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip16"
                style="@style/CustomChipstyle"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:text="Engineering"
                android:textAlignment="center"
                app:checkedIconEnabled="true"
                app:chipCornerRadius="50dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip17"
                style="@style/CustomChipstyle"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:text="Crypto and trading"
                android:textAlignment="center"
                app:checkedIconEnabled="true"
                app:chipCornerRadius="50dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip18"
                style="@style/CustomChipstyle"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="12dp"
                android:text="Product desgign"
                android:textAlignment="center"
                app:checkedIconEnabled="true"
                app:chipCornerRadius="50dp" />
        </com.google.android.material.chip.ChipGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
